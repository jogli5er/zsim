{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "SCons Debug Build",
            "type": "python",
            "request": "launch",
            "program": "/usr/bin/scons",
            "cwd": "${workspaceRoot}",
            "args": [
                "-j7",
                "--d"
            ]
        },
        {
            "name": "Build & Run",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/debug/zsim_trace",
            "args": [
                "${workspaceRoot}/configfiles/debug"
            ],
            "MIMode": "gdb",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "SCons Debug Build"
        }
    ]
}